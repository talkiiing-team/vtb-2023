{
  "openapi": "3.0.1",
  "info": { "title": "API documentation for MAPI", "version": "1.0.0" },
  "servers": [{ "url": "http://localhost:3000", "description": "dev" }],
  "paths": {
    "/v1/predicts": {
      "get": {
        "summary": "get predict requests list",
        "tags": ["predicts"],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PredictRequest"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "requests prediction",
        "tags": ["predicts"],
        "requestBody": {
          "description": "dataset for predict",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "train": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "missed train file"
          },
          "201": {
            "description": "predict request created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PredictRequest"
                }
              }
            }
          }
        }
      }
    },
    "/v1/predicts/{id}": {
      "get": {
        "summary": "get prediction request by id",
        "tags": ["predicts"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "predict request's id"
          }
        ],
        "responses": {
          "400": {
            "description": "bad predict request id"
          },
          "404": {},
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PredictRequest"
                }
              }
            }
          }
        }
      }
    },
    "/v1/train": {
      "post": {
        "summary": "train model",
        "tags": ["train"],
        "requestBody": {
          "description": "dataset for train",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "train": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "500": {
            "description": "train failed"
          },
          "200": {
            "description": "trained successfull"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PredictRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "nullable": false
          },
          "status": {
            "type": "string",
            "enum": ["at_work", "failed", "done"],
            "nullable": false
          },
          "ts": {
            "type": "string",
            "description": "request creation datetime",
            "nullable": false
          },
          "result": {
            "type": "object",
            "nullable": true
          }
        }
      }
    }
  }
}
